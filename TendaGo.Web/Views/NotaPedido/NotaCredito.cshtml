@using TendaGo.Web
@using TendaGo.Web.Models
@using Newtonsoft.Json;


@model NotaPedidoModel
@{

    var jsonTiposPaquete = (string)ViewBag.JsonTiposPaquete;

    // DEFINIMOS LA ACCION A REALIZAR EN LOS DISTINTOS CASOS

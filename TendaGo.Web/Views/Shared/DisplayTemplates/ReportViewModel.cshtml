@model TendaGo.Web.Models.ReportViewModel


<div id="report_frame" style="width:100%; height:75%;" class="loading">
    <iframe name="_report" style="width:100%; height:100%; border:0; min-height: 400px; min-width: 320px;"></iframe>
</div>

<form id="reportForm" method="post" target="_report" action="~/Reports/Viewer.aspx?@Model.ReportPath">
    @{ 
        foreach (var item in Model.Parameters)
        {
            @Html.Hidden(item.Key, item.Value)
        }
    }
</form>


<script> 
    document.forms["reportForm"].submit();

    var frame = document.getElementsByName("_report")[0];

    frame.onloadend = function () {
        var div = document.getElementById("report_frame");
        div.classList = "";
        debugger;
    };
</script>
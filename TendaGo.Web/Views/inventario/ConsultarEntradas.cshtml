        });

        function SetActiveMenuByAction() {
            if (action == 'Aprobar') {
                menu_settings.optionMenu = 'OpcAprobar';
            }
            if (action == 'Revisar') {
                menu_settings.optionMenu = 'OpcRev';
            }
            if (action == 'Empaquetar') {
                menu_settings.optionMenu = 'OpcEmpaq';
            }
            if (action == 'Entregar') {
                menu_settings.optionMenu = 'OpcEntreg';
            }

            SetActiveMenu();
        }
    </script>



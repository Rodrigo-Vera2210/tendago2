@model IEnumerable<TendaGo.Common.LineDto>

@if (Model.Any())
{
    <div class="table-responsive">
        <table id="linesTable" class="display table datatable table-bordered table-hover">
            <thead>
                <tr>
                    <th width="35%">@Html.DisplayNameFor(model => model.Linea)</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Linea)</td>
                        <td>
                            @if (item.IdEstado == 1)
                            {
                                <span class="label label-outline label-success">Activo</span>
                            }
                            else
                            {
                                <span class="label label-outline label-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-default btn-sm btn-icon icon-left" onclick="LoadFormMant('@item.Id');">
                                <i class="entypo-pencil"></i>Editar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="tile-stats tile-white-orange">
        <div class="icon"><i class="entypo-docs"></i></div>
        <div class="num">0</div>
        <h3>No existen registros para el item seleccionado</h3>
    </div>
}
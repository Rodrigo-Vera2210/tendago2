@using TendaGo.Web.Models
@model UnidadMedidaViewModel

<div class="panel panel-success panel-shadow">
    <div class="panel-heading">
        <div class="panel-title">Nueva Unidad de Medida</div>
        @*<div class="panel-options">
                <a href="#" onclick="guardarUnidadMedida()" class="bg-success">
                    <span>Guardar</span>
                    <i class="entypo-floppy"></i>
                </a>
            </div>*@
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("GuardarUnidadMedida", "Parametrizacion", FormMethod.Post, new { id = "nuevaUnidadMedidaForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(x => x.Id, new { @class = "control-label col-sm-5" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Descripcion, new { @class = "control-label col-sm-5" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="button" class="btn btn-default" onclick="consultarUnidadesMedida()">Cancelar</button>
                    <button type="button" class="btn btn-success">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>


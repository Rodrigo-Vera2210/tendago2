@model IEnumerable<TendaGo.Common.DivisionDto>

<div class="table-responsive">
    <table id="divisionsTable" class="display table table-bordered table-hover" width="100%">
        <thead>
            <tr>
                <th width="35%">División</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    @*<td>@Html.DisplayFor(modelItem => item.Id)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Division)</td>
                    <td>
                            @if (item.IdEstado == 1)
                            {
                                <span class="label label-outline label-success">Activo</span>
                            }
                            else
                            {
                                <span class="label label-outline label-danger">Inactivo</span>
                            }
                        </td>
                    <td>
                        <button class="btn btn-default btn-sm btn-icon icon-left" onclick="LoadFormMant('@item.Id');">
                            <i class="entypo-pencil"></i>Editar
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>